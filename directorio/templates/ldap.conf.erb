BASE <%= @suffix %>
URI <% @ldapservers.each do |val| -%> ldap://<%= val %>:389/ <% end -%>

TIMELIMIT	15
TIMEOUT		5

TLS_CACERT	/etc/ipa/ca.crt

SASL_MECH	GSSAPI
SASL_NOCANON	on
